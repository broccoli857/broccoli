{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": ["../"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": ["-j20"],  //这里cmake -j20 表示 使用20核编译代码，可选项
            "dependsOn": ["cmake"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "build",
            "dependsOn": ["cmake","make"]
        }
    ]
}
